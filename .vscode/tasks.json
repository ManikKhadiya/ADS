{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean and Build Active C File",
            "type": "shell",
            "command": "cl",
            "args": [
                "/nologo",
                "/Fo${workspaceFolder}/build/${fileBasenameNoExtension}/",
                "/Fe${workspaceFolder}/build/${fileBasenameNoExtension}/${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Clean Build Directory"
            ]
        },
        {
            "label": "Clean Build Directory",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/c",
                "if exist ${workspaceFolder}\\build\\${fileBasenameNoExtension} (rd /s /q ${workspaceFolder}\\build\\${fileBasenameNoExtension}) && mkdir ${workspaceFolder}\\build\\${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Make build directory",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/c",
                "mkdir ${workspaceFolder}\\build\\${fileBasenameNoExtension}"
            ],
            "problemMatcher": []
        },
        {
            "label": "Run Active Executable",
            "type": "shell",
            "command": "${workspaceFolder}/build/${fileBasenameNoExtension}/${fileBasenameNoExtension}.exe",
            "dependsOn": [
                "Clean and Build Active C File"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ]
}